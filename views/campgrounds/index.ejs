<% layout('layouts/boilerplate') -%>
<div id="map" style = "width: 100%; height: 500px">


</div>
<h1>Campgrounds</h1>
<a href="/campgrounds/new">New Campground</a>
<ul>
<% for(let campground of campgrounds){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%=campground.images[0].url%>" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div class="card-title"><%=campground.title%></div>
                    <div class="card-text"><%= campground.Description %> </div>
                    <div>
                        <div class="text-muted"><%= campground.location %> </div>
                    </div>
                    <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View</a>
                </div>
            </div>
        </div>
    </div>    
<% } %>  
</ul>

<script >
